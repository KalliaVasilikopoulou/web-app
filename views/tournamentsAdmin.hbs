{{!-- EDIT TOURNAMENT POPUP FORM --}}
<div class = "popup" id = "editTournament">
    <div class = "modal-container"> 
        <div class = "modal"  style = "min-width: 70%;"> 
            <div class = "button_row row m-0 p-0"> 
                <button class = "close col-1 p-0">
                </button> 
            </div>
            <form class = "form" method= "POST" enctype="multipart/form-data" action= "/tournamentsAdmin/editTournamentAtDB">
