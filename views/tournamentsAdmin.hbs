<div style = "display: none;" class ="check_value">{{loadpopup}}</div>


{{!-- ADD TOURNAMENT POPUP FORM --}}
<div class = "popup" id = "addTournament">
    <div class = "modal-container"> 
        <div class = "modal"  style = "min-width: 70%;"> 
            <div class = "button_row row m-0 p-0"> 
                <button class = "close col-1 p-0">
                </button> 
            </div>
            <form class = "form" method= "POST" enctype="multipart/form-data" action= "/tournamentsAdmin/addTournamentToDB">
                <div class = "inputs col m-0">
                    <div class="title row m-0 p-0"> 
                        <h1 style = "font-size: 32px;">
                            ΝΕΟ ΤΟΥΡΝΟΥΑ
                        </h1> 
                    </div>
                    <div class = "row">
                        <div class = "col-6">
                            <div class = "field row mb-4 p-0">
                                <label for = "title" class = "field_name col-7 p-0"> Τίτλος:<span style = "color:red">*</span> </label>
                                <input type="text" name="title" class = "field_input col-7 p-0">
                            </div>
                            <div class = "field row mb-4 p-0">
                                <label for = "startdate" class = "field_name col-7 p-0"> Έναρξη:<span style = "color:red">*</span> </label>
                                <input type="date" name="startdate" class = "field_input col-7 p-0">
                            </div>
                            <div class = "field row mb-4 p-0">
                                <label for = "enddate" class = "field_name col-7 p-0"> Λήξη:<span style = "color:red">*</span> </label>
                                <input type="date" name="enddate" class = "field_input col-7 p-0">
                            </div>
                            <div class = "field row mb-4 p-0"> 
                                <label for = "skilllevel" class = "field_name col-7 p-0"> Επίπεδο: </label>
                                <input type="integer" name="skilllevel" class = "field_input col-7 p-0">
                            </div>
                        </div>
                        <div class = "col-6">
                            <div class = "field row mb-4 p-0"> 
                                <label for = "agerestrictions" class = "field_name col-7 p-0"> Ηλικιακές ομάδες: </label>
                                <input type="integer" name="agerestrictions" class = "field_input col-7 p-0">
                            </div>
                            <div class = "field row mb-4 p-0"> 
                                <label for = "details" class = "field_name col-7 p-0"> Περιγραφή: </label>
                                <textarea name="details" rows="3" class = "field_input col-7 p-0"></textarea>
                            </div>
                            <div class = "field row mb-4 p-0"> 
                                <label for = "poster" class = "field_name col-7 p-0"> Πόστερ: </label>
                                <input style = "max-height: 25.5px;" type="file" accept="image/png, image/jpeg, image/jpg" class = "field_input col-7 p-0" name="poster">
                            </div>
                        </div>
                    </div>
                </div>
                <button type = "submit" class = "submit"> 
                    Προσθήκη τουρνουά
                </button>
            </form>
        </div>
    </div>
</div>


{{!-- DELETE TOURNAMENT POPUP FORM --}}
<div class = "popup" id = "deleteTournament">
    <div class = "modal-container"> 
        <div class = "modal"  style = "min-width: 70%;"> 
            <div class = "button_row row m-0 p-0"> 
                <button class = "close col-1 p-0">
                </button> 
            </div>
            <form class = "form" method= "POST" enctype="application/x-www-form-urlencoded" action= "/tournamentsAdmin/deleteTournamentFromDB">
                <div class = "inputs col m-0">
                    <div class="title row m-0 p-0"> 
                        <h1 style = "font-size: 32px;">
                            ΔΙΑΓΡΑΦΗ ΤΟΥΡΝΟΥΑ
                        </h1>
                    </div> 
                    <div class = "field row mb-3 p-0"> 
                        <label for = "tournamentid" class = "field_name col-7 p-0" style="font-weight: bold; color: grey">Διαγραφή αυτού του τουρνουά;</label>
                        <input type="hidden" name="tournamentid" value = {{selected.tournamentid}}><br>
                        <div class = "field_name col-7 mb-4 p-0">
                            <span class = "modal_field">Τίτλος:</span> {{selected.title}}<br>
                            <span class = "modal_field">Ημερομηνία έναρξης:</span> {{selected.startdate}}<br>
                            <span class = "modal_field">Ημερομηνία λήξης:</span> {{selected.enddate}}<br>
                            <span class = "modal_field">Επίπεδο:</span> {{#if selected.skilllevel}}{{selected.skilllevel}}{{else}}<span style = "color:rgb(160, 160, 160);">Δεν έχει καταχωρηθεί...</span>{{/if}}<br>
                            <span class = "modal_field">Ηλικιακές ομάδες:</span> {{#if selected.agerestrictions}}{{selected.agerestrictions}}{{else}}<span style = "color:rgb(160, 160, 160);">Δεν έχει καταχωρηθεί...</span>{{/if}}<br>
                            <span class = "modal_field">Περιγραφή:</span> {{#if selected.details}}{{selected.details}}{{else}}<span style = "color:rgb(160, 160, 160);">Δεν υπάρχει περιγραφή...</span>{{/if}}<br>
                            <span class = "modal_field">Πόστερ:</span> {{#if selected.poster}}<br> <img src={{selected.poster}} id="modal_poster">{{else}}<span style = "color:rgb(160, 160, 160);">Δεν υπάρχει πόστερ...</span>{{/if}}<br>
                        </div>
                        <div class = "field_name col-7 p-0" style="color: red;">
                            ΠΡΟΣΟΧΗ! Με το πάτημα του πλήκτρου 'Διαγραφή τουρνουά', το συγκεκριμένο τουρνουά θα διαγραφεί οριστικά!
                        </div>
                    </div>
                </div>
                <button type = "submit" class = "submit"> 
                    Διαγραφή τουρνουά
                </button>
            </form>
        </div>
    </div>
</div>


